<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewProfileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_account_circle_24" />

        <TextView
            android:id="@+id/textViewFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/imageViewProfileImage"
            app:layout_constraintStart_toStartOf="@+id/imageViewProfileImage"
            app:layout_constraintTop_toBottomOf="@+id/imageViewProfileImage" />

        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:enabled="false"
            android:hint="First Name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/textViewFullName"
            app:layout_constraintStart_toStartOf="@+id/textViewFullName"
            app:layout_constraintTop_toBottomOf="@+id/textViewFullName" />

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:layout_marginTop="20dp"
            android:inputType="textPersonName"
            android:hint="Last Name"
            app:layout_constraintEnd_toEndOf="@+id/editTextFirstName"
            app:layout_constraintStart_toStartOf="@+id/editTextFirstName"
            app:layout_constraintTop_toBottomOf="@+id/editTextFirstName" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:enabled="false"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="@+id/editTextLastName"
            app:layout_constraintStart_toStartOf="@+id/editTextLastName"
            app:layout_constraintTop_toBottomOf="@+id/editTextLastName" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Phone"
            android:enabled="false"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="@+id/editTextEmail"
            app:layout_constraintStart_toStartOf="@+id/editTextEmail"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

        <TextView
            android:id="@+id/interestsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Choose Your Interests:"
            app:layout_constraintEnd_toEndOf="@+id/editTextPhone"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintStart_toStartOf="@+id/editTextPhone"
            app:layout_constraintTop_toBottomOf="@+id/editTextPhone" />

        <TextView
            android:id="@+id/textViewFirstNameWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This field can't be empty"
            android:textColor="@color/red"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/editTextFirstName"
            app:layout_constraintStart_toStartOf="@+id/editTextFirstName"
            app:layout_constraintTop_toBottomOf="@+id/editTextFirstName" />

        <TextView
            android:id="@+id/textViewLastNameWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This field can't be empty"
            android:textColor="@color/red"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/editTextLastName"
            app:layout_constraintStart_toStartOf="@+id/editTextLastName"
            app:layout_constraintTop_toBottomOf="@+id/editTextLastName" />

        <TextView
            android:id="@+id/textViewEmailWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This field can't be empty"
            android:textColor="@color/red"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/editTextEmail"
            app:layout_constraintStart_toStartOf="@+id/editTextEmail"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

        <TextView
            android:id="@+id/textViewPhoneWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This field can't be empty"
            android:textColor="@color/red"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/editTextPhone"
            app:layout_constraintStart_toStartOf="@+id/editTextPhone"
            app:layout_constraintTop_toBottomOf="@+id/editTextPhone" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewPhoneWarning" />

        <ImageButton
            android:id="@+id/imageButtonEditProperties"
            android:layout_width="46dp"
            android:layout_height="43dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewFirstNameWarning"
            app:layout_constraintStart_toEndOf="@+id/editTextFirstName"
            app:layout_constraintTop_toTopOf="@+id/editTextFirstName"
            app:srcCompat="@drawable/ic_action_edit" />

        <Button
            android:id="@+id/soccerButton"
            android:layout_width="173dp"
            android:layout_height="44dp"
            android:layout_marginTop="40dp"
            android:text="Soccer"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:layout_constraintEnd_toEndOf="@+id/interestsText"
            app:layout_constraintStart_toStartOf="@+id/interestsText"
            app:layout_constraintTop_toBottomOf="@+id/interestsText" />

        <Button
            android:id="@+id/basketballButton"
            android:layout_width="173dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:text="BasketBall"
            app:backgroundTint="@color/colorPrimaryDark"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:layout_constraintEnd_toEndOf="@+id/soccerButton"
            app:layout_constraintStart_toStartOf="@+id/soccerButton"
            app:layout_constraintTop_toBottomOf="@+id/soccerButton" />
        <Button
            android:id="@+id/volleyballButton"
            android:layout_width="173dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:text="VolleyBall"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:layout_constraintEnd_toEndOf="@+id/basketballButton"
            app:layout_constraintStart_toStartOf="@+id/basketballButton"
            app:layout_constraintTop_toBottomOf="@+id/basketballButton" />

        <Button
            android:id="@+id/runningButton"
            android:layout_width="173dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:text="Running"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:layout_constraintEnd_toEndOf="@+id/volleyballButton"
            app:layout_constraintStart_toStartOf="@+id/volleyballButton"
            app:layout_constraintTop_toBottomOf="@+id/volleyballButton" />

        <Button
            android:id="@+id/tennisButton"
            android:layout_width="173dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:text="Tennis"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:layout_constraintEnd_toEndOf="@+id/runningButton"
            app:layout_constraintStart_toStartOf="@+id/runningButton"
            app:layout_constraintTop_toBottomOf="@+id/runningButton" />

        <Button
            android:id="@+id/exerciseButton"
            android:layout_width="173dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:text="Exercise"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:layout_constraintEnd_toEndOf="@+id/tennisButton"
            app:layout_constraintStart_toStartOf="@+id/tennisButton"
            app:layout_constraintTop_toBottomOf="@+id/tennisButton" />

        <TextView
            android:id="@+id/dummyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="TextView"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/exerciseButton"
            app:layout_constraintStart_toStartOf="@+id/exerciseButton"
            app:layout_constraintTop_toBottomOf="@+id/exerciseButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>